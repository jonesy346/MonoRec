{
  // INSTRUCTIONS:
  // 1. Copy this file to 'appsettings.json' in the same directory
  // 2. Update the values as needed for your local environment
  // 3. Never commit appsettings.json to version control (it's gitignored)
  //
  // Quick setup:
  //   cp appsettings.json.example appsettings.json
  //
  // NOTE: The default SQLite connection strings work out-of-the-box for local development.
  // You only need to modify these if you're switching to SQL Server or another database.

  "ConnectionStrings": {
    // Default connection for business entities (Doctor, Patient, Visit)
    "DefaultConnection": "Data Source=app.db",

    // Identity connection for ASP.NET Core Identity (Users, Roles)
    "IdentityConnection": "Data Source=identity.db"
  },

  "IdentityServer": {
    "Clients": {
      "MonoRec": {
        // IdentityServerSPA profile enables JWT token authentication for React SPA
        "Profile": "IdentityServerSPA"
      }
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}
